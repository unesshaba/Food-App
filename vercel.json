{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.js" },
    { "src": "/(.*)", "dest": "/client/build/$1" }
  ]
}
